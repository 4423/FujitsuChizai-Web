@model FujitsuChizai.Models.MapFreqPair

<div class="map">
    <div id="canvas">
        <img src="~/Resources/Map/@Model.RequestedMap.MapImageFilePath">
        <div id="svg_layer">
            <svg width="100%" height="100%" viewBox="0 0 @Model.RequestedMap.Width @Model.RequestedMap.Height">
                @if (Model.Freq.Count > 0)
                {
                    double maximum = Model.Freq.Max(x => x.Count);
                    foreach (var item in Model.Freq)
                    {
                        double r = item.Count / maximum * 40;
                        <circle cx="@Html.DisplayFor(modelItem => item.PlaceMark.X)"
                                cy="@Html.DisplayFor(modelItem => item.PlaceMark.Y)"
                                r="@Html.DisplayFor(modelItem => r)"
                                fill="orange" />
                    }
                }
            </svg>
        </div>
    </div>
</div>


